<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="mypack">

        <class>com.brief.mypack.entities.AdminEntity</class>
        <class>com.brief.mypack.entities.ManagerEntity</class>
        <class>com.brief.mypack.entities.ClientEntity</class>
        <class>com.brief.mypack.entities.PackageEntity</class>
        <class>com.brief.mypack.entities.TripEntity</class>
        <class>com.brief.mypack.entities.DriverEntity</class>

        <properties>
            <property name="hibernate.jdbc.url" value="jdbc:mysql://mysqldb:3306/mypack"/>
            <property name="hibernate.jdbc.driver_class" value="org.mariadb.jdbc.Driver"/>
            <property name="hibernate.jdbc.user" value="root"/>
            <property name="hibernate.jdbc.password" value="123456789"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
        </properties>
    </persistence-unit>
</persistence>
